<h1>Books#show</h1>

<%= render 'list', book: @book %>

<table>
  <thead>
    <tr>
      <th>Book detail</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @book.user.name %></td>
      <td><%= link_to @book.title, book_path(@book.id) %></td>
      <td><%= @book.body %></td>
      <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
    </tr>
  </tbody>
</table>