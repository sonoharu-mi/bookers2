<div class="row">
  <div class="text-danger">
    <% if @book.errors.any? %>
      <% if @book.errors.count ==1 %>
        <h3>1 error prohibited this obj from being saved:</h3>
      <% else %>
        <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
      <% end %>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-3">
    <%= render 'list', book: @book, user: @user %>
  </div>

  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(100,100) %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>