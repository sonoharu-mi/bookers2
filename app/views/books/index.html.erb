<h1>Bookers</h1>

<%= render 'list', book: @book %>

<h1>Book detail</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.user.name, users_path %></td>
        <td><%= link_to book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>